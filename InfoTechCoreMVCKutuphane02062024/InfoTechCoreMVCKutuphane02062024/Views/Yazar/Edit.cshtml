@model Yazar

@{
    ViewData["Title"] = "Yazar Güncelleme";
}

<h1>Yazar Güncelleme Sayfası</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Yazarno" />
            <div class="form-group">
                <label asp-for="Yazarad" class="control-label"></label>
                <input asp-for="Yazarad" class="form-control" />
                <span asp-validation-for="Yazarad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Yazarsoyad" class="control-label"></label>
                <input asp-for="Yazarsoyad" class="form-control" />
                <span asp-validation-for="Yazarsoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success" onclick="return confirm('Güncellemek istediğinize emin misiniz?');">Güncelle</button>
                <a asp-action="List" asp-controller="Yazar" class="btn btn-primary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

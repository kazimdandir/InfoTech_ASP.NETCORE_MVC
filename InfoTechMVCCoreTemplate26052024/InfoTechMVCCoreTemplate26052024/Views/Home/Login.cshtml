
@{
    ViewData["Title"] = "Login";
}

<h1>Giriş Sayfası</h1>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">Giriş Yap</h2>
                    <form>
                        <div class="form-group">
                            <label for="email">E-posta Adresi</label>
                            <input type="email" class="form-control" id="email" placeholder="E-posta adresinizi girin">
                        </div>
                        <div class="form-group">
                            <label for="password">Şifre</label>
                            <input type="password" class="form-control" id="password" placeholder="Şifrenizi girin">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="#" class="text-decoration-none">Şifremi Unuttum</a>
            </div>
        </div>
    </div>
</div>


@{
    ViewData["Title"] = "Index";
}

<h1>Product Form</h1>
<hr />

<form method="post">
    <div>
        <label>Product ID</label>
        <input type="text" name="productId" placeholder="Enter product id..." />
    </div>

    <div>
        <label>Product Name</label>
        <input type="text" name="productName" placeholder="Enter product name..." />
    </div>

    <div>
        <label>Product Price</label>
        <input type="text" name="productPrice" placeholder="Enter product price..." />
    </div>

    <div>
        <label>Product Stock Count</label>
        <input type="text" name="productStockQuantity" placeholder="Enter product stock count..." />
    </div>

    <div>
        <input type="submit" value="Send Product" class="btn btn-outline-success" />
    </div>
</form>

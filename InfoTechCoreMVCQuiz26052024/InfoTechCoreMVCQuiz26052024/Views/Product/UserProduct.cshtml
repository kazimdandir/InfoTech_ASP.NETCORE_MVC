@model UserProductViewModel

@{
    ViewData["Title"] = "UserProduct";
}

<h1>User and Product List</h1>
<hr />

<h2>Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>User Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.UserLastName</td>
            </tr>
        }
    </tbody>
</table>

<h2>Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Stock Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
                <td>@product.ProductStockQuantity</td>
            </tr>
        }
    </tbody>
</table>
@model Product

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form id="editForm" method="post">
            <input type="hidden" asp-for="ProductID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductStockQuantity" class="control-label"></label>
                <input asp-for="ProductStockQuantity" class="form-control" />
                <span asp-validation-for="ProductStockQuantity" class="text-danger"></span>
            </div>        
            <div class="form-group">
                <button type="submit" class="btn btn-primary" onclick="return updateProduct(event);">Update</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductList" asp-controller="Product">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model IEnumerable<Iletisim>

<h1>Gelen Kutusu</h1>

<style>
    .table-hover tbody tr:hover {
        background-color: #e0f7fa;
    }
</style>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>E-Posta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EPosta</td>
                <td>
                    <a asp-controller="Message" asp-action="Details" asp-route-id="@item.IletisimID" class="btn btn-warning">Detay</a>
                    <a asp-controller="Message"  asp-action="Delete" asp-route-id="@item.IletisimID" class="btn btn-danger" onclick="return confirm('Mesajı silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

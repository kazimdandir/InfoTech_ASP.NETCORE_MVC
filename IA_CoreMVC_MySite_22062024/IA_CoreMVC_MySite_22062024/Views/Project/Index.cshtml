@model IEnumerable<Projeler>

@{
    ViewData["Title"] = "Index";
}

<h1>Projeler</h1>

<style>
    .table-hover tbody tr:hover {
        background-color: #e0f7fa;
    }
</style>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Yeni Proje Ekle</a>
</p>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjeAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjeTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjeFoto)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjeAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjeTarihi)
                </td>
                @if (item.ProjeFoto == null)
                {
                    <td><span style="color:red">Fotoğraf eklenmemiştir!</span></td>
                }
                else
                {
                    <td>

                        <img src="/images/@item.ProjeFoto" alt="Resim" style="max-width: 100px; max-height: 100px;" />
                    </td>
                }
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProjeID" class="btn btn-success">Düzenle</a> 
                    <a asp-action="Details" asp-route-id="@item.ProjeID" class="btn btn-warning">Detay</a> 
                    <a asp-action="Delete" asp-route-id="@item.ProjeID" class="btn btn-danger" onclick="return confirm('Projeyi silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

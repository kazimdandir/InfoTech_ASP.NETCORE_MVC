@model Kullanici

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header text-center">
                    <h3>Giriş Ekranı</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="KullaniciAdi" class="control-label"></label>
                            <input asp-for="KullaniciAdi" class="form-control" name="KullaniciAdi" />
                            <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                        </div><br />
                        <div class="form-group">
                            <label asp-for="Parola" class="control-label"></label>
                            <input asp-for="Parola" class="form-control" type="password" name="Parola" />
                            <span asp-validation-for="Parola" class="text-danger"></span>
                        </div><br />
                        <div class="form-group">
                            <input type="submit" value="Giriş Yap" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

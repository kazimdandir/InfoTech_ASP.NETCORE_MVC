@model IEnumerable<Hakkimda>

@{
    ViewData["Title"] = "Index";
}

<h1>Blog Yazıları</h1>
<br />

<style>
    .table-hover tbody tr:hover {
        background-color: #e0f7fa; 
    }
</style>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Yeni Blog Yazısı Ekle</a>
</p>

<br />

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YaziTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YaziFoto)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YaziTarih)
                </td>

                @if (item.YaziFoto == null)
                {
                    <td><span style="color:red">Fotoğraf eklenmemiştir!</span></td>
                }
                else
                {
                    <td>

                        <img src="/images/@item.YaziFoto" alt="Resim" style="max-width: 100px; max-height: 100px;" />
                    </td>
                }
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-warning">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger" onclick="return confirm('Yazıyı silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

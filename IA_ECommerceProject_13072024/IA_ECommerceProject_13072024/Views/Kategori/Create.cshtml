@model Kategori

@{
    ViewData["Title"] = "Create";
}

<h1>Kategori Ekle</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KategoriAdi" class="control-label"></label>
                <input asp-for="KategoriAdi" class="form-control" />
                <span asp-validation-for="KategoriAdi" class="text-danger"></span>
            </div>

            <!--CEKEDITOR-->
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/ckeditor/ckeditor.js"></script>
            <script>
                $(document).ready(function () {
                    CKEDITOR.replace('Test')
                })
            </script>

            <div class="form-group">
                <label asp-for="KategoriAciklamasi" class="control-label"></label>
                <textarea asp-for="KategoriAciklamasi" class="form-control" id = "test"></textarea>
                <span asp-validation-for="KategoriAciklamasi" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

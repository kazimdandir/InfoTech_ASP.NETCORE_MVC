    <div>
        <label>Ürün Fiyatı</label>
        <input type="text" name="Price" placeholder="Ürün Fiyatı Giriniz" />
    </div>

    <div>
        <input type="submit" value="Ürün Gönder" class="btn btn-outline-success" />
    </div>

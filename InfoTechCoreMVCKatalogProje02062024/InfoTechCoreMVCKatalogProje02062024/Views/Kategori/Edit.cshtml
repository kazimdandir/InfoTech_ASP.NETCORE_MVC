@model Kategori

@{
    ViewData["Title"] = "Güncelleme Sayfası";
}

<h1>Kategori Güncelleme Sayfası</h1>

<h4>Kategori</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="KategoriId" />

            <div class="form-group">
                <label asp-for="KategoriAdi" class="control-label"></label>
                <input asp-for="KategoriAdi" class="form-control" />
                <span asp-validation-for="KategoriAdi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KategoriAciklama" class="control-label"></label>
                <input asp-for="KategoriAciklama" class="form-control" />
                <span asp-validation-for="KategoriAciklama" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

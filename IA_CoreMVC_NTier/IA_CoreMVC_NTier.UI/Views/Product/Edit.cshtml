@model Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Ürün Düzenle</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form id="editCategoryForm" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitInStock" class="control-label"></label>
                <input asp-for="UnitInStock" class="form-control" />
                <span asp-validation-for="UnitInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var kategori in ViewBag.Kategoriler)
                    {
                        <option value="@kategori.CategoryID">
                            @($"{kategori.CategoryName}")
                        </option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a asp-action="Index" class="btn btn-primary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#editCategoryForm').on('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu ürünü düzenlemek istediğinizden emin misiniz?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, düzenle!',
                    cancelButtonText: 'Hayır, vazgeç!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.submit();
                    }
                });
            });
        });
    </script>
}
